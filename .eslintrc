{
    "extends": ["prettier", "react-app"],
    "plugins": ["react-hooks"],
    "parser": "babel-eslint",
    "globals": {
        "React": true,
        "logger": true,
        "cfg": true,
        "__PORT__": true,
        "__DEV__": true
    },
    "rules": {
        "arrow-spacing": [
            2,
            {
                "before": true,
                "after": true
            }
        ],
        "no-duplicate-case": 2,
        "handle-callback-err": [2, "^(err|error)$"],
        "react/prop-types": [
            2,
            {
                "ignore": ["children"]
            }
        ],
        "jsx-a11y/anchor-is-valid": 0,
        "no-var": 2,
        "no-unsafe-finally": 2,
        "no-unsafe-negation": 2,
        "strict": [2, "never"],
        "no-invalid-regexp": 2,
        "spaced-comment": [
            2,
            "always",
            {
                "line": {
                    "markers": ["*package", "!", ","]
                },
                "block": {
                    "balanced": true,
                    "markers": ["*package", "!", ","],
                    "exceptions": ["*"]
                }
            }
        ],
        "valid-typeof": 2,
        "no-unused-vars": [
            2,
            {
                "vars": "all",
                "args": "none"
            }
        ],
        "no-useless-call": 2,
        "no-console": 0,
        "no-constant-condition": 0,
        "jsx-quotes": ["warn", "prefer-double"],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "semi": ["error", "always"],
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ]
    }
}

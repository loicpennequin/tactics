{
    "name": "root",
    "private": true,
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "create:package": "node tools/createPackage.js",
        "create:db": "npm -C ./packages/tactics-server run create:db",
        "create:env": "npm -C ./packages/tactics-server run create:env",
        "build:app": "npm -C ./packages/tactics-app run electron-pack",
        "dev": "concurrently -n server,app \"npm run start:server\" \"wait-on http://localhost:8000 && npm run start:client\"",
        "start:server": "npm -C ./packages/tactics-server run dev ..",
        "start:client": "npm -C ./packages/tactics-app run electron-dev ..",
        "migrate:make": "npm -C ./packages/tactics-server run migrate:make",
        "migrate:latest": "npm -C ./packages/tactics-server run migrate:latest",
        "migrate:rollback": "npm -C ./packages/tactics-server run migrate:rollback",
        "presetup": "npm install",
        "setup": "npm run bootstrap && npm run create:env && npm run create:db"
    },
